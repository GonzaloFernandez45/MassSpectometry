    $a1.addScore(-1);
    $a2.addScore(-1);
    System.out.println("Scored -1 for annotations: " + $a1 + " and " + $a2);

end

rule "RT negative - different type, same carbons/double bonds, RT follows PG < PE < PI < PA < PS < PC"
when
    $a1 : /annotations [$type1 : lipid.getLipidType(), $carbons1 : lipid.getCarbonCount(), $db1 : lipid.getDoubleBondsCount(), $rt1 : rtMin, $l1 : lipid]
    $a2 : /annotations [this != $a1, $type1 != lipid.getLipidType() , $carbons1 == lipid.getCarbonCount() , $db1 == lipid.getDoubleBondsCount(), $rt1 < rtMin, $l2 : lipid]
    eval($l1.getLipidTypeRank() < $l2.getLipidTypeRank())
then
